@model Reservatie
@{
    ViewBag.Titel = "Reservatie";
    ViewBag.Ondertitel = "Maak een nieuwe reservatie";
    ViewData["Title"] = "Reservatie Aanmaken";
}

<h1>@ViewBag.Titel</h1>
<h4>@ViewBag.Ondertitel</h4>

<div asp-validation-summary="All" class="text-danger"></div> @*niet meer van toepassing door _ValidationScriptsPartial*@


<form asp-controller="Reservatie" asp-action="CreateReservation">
    <div class="form-group">
        <label asp-for="Voornaam" class="control-label"></label>
        <input asp-for="Voornaam" class="form-control"/>
        <span asp-validation-for="Voornaam" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Achternaam" class="control-label"></label>
        <input asp-for="Achternaam" class="form-control" />
        <span asp-validation-for="Achternaam" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BevestigEmail" class="control-label"></label>
        <input asp-for="BevestigEmail" class="form-control" />
        <span asp-validation-for="BevestigEmail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Datum" class="control-label"></label>
        <input asp-for="Datum" class="form-control" />
        <span asp-validation-for="Datum" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Tijd" class="control-label"></label>
        <label class="radio-inline"><input type="radio" asp-for="Tijd" value="@Tijdstip.Ochtend"/> @Tijdstip.Ochtend (8u30 - 11u)</label>
        <label class="radio-inline"><input type="radio" asp-for="Tijd" value="@Tijdstip.Middag" /> @Tijdstip.Middag (11u - 14u)</label>
        <label class="radio-inline"><input type="radio" asp-for="Tijd" value="@Tijdstip.Avond" /> @Tijdstip.Avond (17u - 20u)</label>
        <span asp-validation-for="Tijd" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AantalMensen" class="control-label"></label>
        <input asp-for="AantalMensen" class="form-control" />
        <span asp-validation-for="AantalMensen" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="checkbox" asp-for="Akkoord"/>
        <label asp-for="Akkoord" class="control-label"></label>
        <span asp-validation-for="Akkoord" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Maak aan" class="btn btn-primary"/>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
