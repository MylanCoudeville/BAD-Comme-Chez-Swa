@model CommeChezSwaMylanCoudeville.Models.Reservatie

@{
    ViewData["Title"] = $"{Model.Id} {Model.Achternaam}";
}

<h1>DetailReservation</h1>

<div>
    <h4>Reservatie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Voornaam)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Voornaam)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Achternaam)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Achternaam)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Datum)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Datum)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tijd)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Tijd == Tijdstip.Ochtend)
            {
                <text>Ochtend (8u30 - 11u)</text>
            }
            else if (Model.Tijd == Tijdstip.Middag)
            {
                <text>Middag (11u - 14u)</text>
            }
            else
            {
                <text>Avond (17u - 20u)</text>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AantalMensen)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AantalMensen)
        </dd>
</div>
<div>
    <a asp-action="OverviewReservations" asp-controller="Reservatie">Terug naar overzicht</a>
</div>
